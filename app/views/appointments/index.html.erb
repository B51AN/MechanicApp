<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Details</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each_with_index do |appointment, index| %>
      <tr id="<%= dom_id appointment %>">
        <th scope="row"><%= index + 1 %></th>
        <td><%= appointment.name %></td>
        <td><%= appointment.email %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.time %></td>
        <td><%= appointment.details %></td>
        <td>
          <!-- Edit Link -->
          <%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-primary btn-sm" %>

          <!-- Destroy Button -->
          <%= button_to 'Delete', appointment_path(appointment), method: :delete, 
                        data: { confirm: 'Are you sure you want to delete this appointment?' }, 
                        class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
