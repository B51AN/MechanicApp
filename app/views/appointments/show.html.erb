<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @appointment.name %></td>
        <td><%= @appointment.email %></td>
        <td><%= @appointment.date %></td>
        <td><%= @appointment.time %></td>
        <td><%= @appointment.details %></td>
      </tr>
  </tbody>
</table>
<div>
  <%= link_to "Edit this appointment", edit_appointment_path(@appointment) %> |
  <%= link_to "Back to appointments", appointments_path %> |
  <%= button_to "Delete appointment", @appointment, method: :delete, data: { confirm: "Are you sure you want to delete this appointment?" } %>
</div>

